<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GovermentIDCaptureActivity">

    <include
        android:id="@+id/head"
        layout="@layout/header_layout" />
    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">
        <ScrollView
            android:layout_below="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/head"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="@dimen/margine_20"
                    android:layout_below="@+id/governmentIdLayout"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/voterIdSubmitBT"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/margine_5"
                        android:layout_marginRight="@dimen/margine_5"
                        android:layout_marginTop="@dimen/margine_5"
                        android:background="@drawable/rounded_shape_yello_button"
                        android:text="@string/submit"
                        android:layout_marginBottom="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/governmentIdLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/typeOfIdCard"
                        android:textColor="@color/blue"
                        style="@style/label"
                        android:textSize="@dimen/text_size_20sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_shape_textview"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/govtIdSP"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/voterIdLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <TextView
                                android:textSize="@dimen/text_size_20sp"
                                style="@style/label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:text="Enter ID Card Number"
                                android:textColor="@color/blue" />

                            <EditText
                                android:id="@+id/voterIdCardNumberET"
                                style="@style/blueBorderEditText"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ :-/\\\."
                                android:imeOptions="actionNext"
                                android:maxLength="24"
                                android:maxLines="1"
                                android:textSize="@dimen/text_size_20sp"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout

                            android:id="@+id/nameBenefLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <TextView
                                android:textSize="@dimen/text_size_20sp"
                                style="@style/label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:text="Enter Name As In ID Card"
                                android:textColor="@color/blue" />

                            <EditText
                                android:id="@+id/nameET"
                                style="@style/blueBorderEditText"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ :-/\\\."
                                android:imeOptions="actionNext"
                                android:maxLength="24"
                                android:textSize="@dimen/text_size_20sp"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/nameAsInId"
                                android:textColor="@color/blue" />

                            <EditText
                                android:id="@+id/voterIdCardNameET"
                                style="@style/blueBorderEditText"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/edit_text_border"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz. 1234567890"
                                android:imeOptions="actionDone"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/voterIdCaptureLayout"
                            android:layout_marginTop="@dimen/margine_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <Button
                                android:id="@+id/captureVoterIdBT"
                                android:layout_width="250dp"
                                android:layout_height="30dp"

                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:background="@drawable/rounded_shape_yello_button"
                                android:text="Capture Id Photo"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/govtIdPhotoLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:weightSum="2">

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/voterIdIV"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:background="@drawable/no_image_preview"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/photoCaptureLayout"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margine_10"
                            android:layout_height="wrap_content">


                            <Button
                                android:id="@+id/capturePhotoBT"
                                android:layout_width="250dp"
                                android:layout_height="30dp"

                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:background="@drawable/rounded_shape_yello_button"
                                android:text="Capture Beneficiary Photo"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp" />
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/photoLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:weightSum="2">

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/photoIV"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:background="@drawable/no_image_preview"

                                    android:scaleType="fitXY" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone">

                            <CheckBox
                                android:id="@+id/termsCB"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="2dp"
                                android:checked="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/nameSECC"
                                android:textSize="@dimen/text_size_13sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rationCardLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/nameAsInId"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/text_size_13sp" />

                        <EditText
                            android:id="@+id/rationCardNameET"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_border" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/RationNo"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/text_size_13sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:id="@+id/rationCardNumberET"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1.7"
                                android:background="@drawable/edit_text_border" />

                            <LinearLayout
                                android:id="@+id/rashanCardCaptureLayout"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight=".3"
                                android:background="#FF26CA4C">

                                <ImageView
                                    android:id="@+id/captureRationBT"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@android:drawable/ic_menu_camera"
                                    android:textSize="@dimen/text_size_15sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/rationCardIV"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/ration_card"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/rationCardSubmitBT"
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:background="@drawable/rounded_shape_yello_button"
                                android:text="@string/submit"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_15sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/enrollmentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="@string/enrolId"
                            android:textColor="@color/blue"

                            android:textSize="@dimen/text_size_13sp" />

                        <EditText
                            android:id="@+id/enrollmentIdET"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="@string/enterEnrol"
                            android:maxLength="29"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="@string/NameasEnrol"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/text_size_13sp" />

                        <EditText
                            android:id="@+id/enrollmentNameET"
                            android:layout_width="match_parent"

                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_border"
                            android:paddingLeft="5dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/enrollmentIDSubmitBT"
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:background="@drawable/rounded_shape_yello_button"
                                android:text="@string/submit"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_15sp" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>

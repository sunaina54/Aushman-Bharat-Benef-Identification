<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/otpAuthMsg"
            android:padding="2dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_shine"
            android:text=""/>
        <TextView

            android:padding="2dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:id="@+id/invalidOtpTV"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="@string/invalid_otp"/>

    <EditText
        android:background="@drawable/edit_text_border"
        android:id="@+id/otpET"
        android:padding="10dp"
        android:textSize="@dimen/text_size_15sp"
        android:inputType="number"
        android:hint="@string/Enterotp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <Button
                android:id="@+id/ok"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:textAllCaps="false"
                android:text="@string/ok"
                android:layout_marginRight="3dp"
                android:background="@drawable/rounded_shape_grey"/>
            <Button
                android:id="@+id/verifyLaterBT"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:textAllCaps="false"
                android:text="@string/verifyLater"
                android:layout_marginLeft="3dp"
                android:background="@drawable/rounded_shape_grey"/>
        </LinearLayout>
        </LinearLayout>

  <!--  </android.support.v7.widget.CardView>-->

</LinearLayout>

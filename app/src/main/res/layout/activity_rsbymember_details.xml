<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SearchRSBYMemberActivity">
    <include layout="@layout/header_layout" android:id="@+id/header"/>
    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/edit_text_border"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/searchRsbyET"
                android:visibility="visible"
                android:layout_margin="5dp"
                android:layout_below="@+id/card_view"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="10dp"
                android:maxLength="17"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_size_15sp"
                android:imeOptions="actionDone"
                android:hint="@string/enterurnNo"/>
            <RelativeLayout
                android:id="@+id/searchRSBY"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/search_black"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:visibility="gone"
                android:layout_marginLeft="2dp"
                android:id="@+id/addOfflineURNBT"
                android:textAllCaps="false"
                android:background="@drawable/rounded_shape_yello_button"
                android:layout_width="200dp"
                android:text="@string/saveLater"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <android.support.v7.widget.RecyclerView
            android:id="@+id/rsbyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

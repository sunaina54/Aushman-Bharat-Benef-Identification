<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bankDetLayout"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:visibility="visible"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="@dimen/text_size_13sp"
        android:text="@string/mobile_number"
        android:textColor="@color/blue"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/rationCardNameET"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/edit_text_border"
            android:layout_height="40dp" />
        <Button
            android:text="@string/OTPauth"
            android:layout_marginLeft="3dp"
            android:textAllCaps="false"
            android:textColor="@color/white_shine"
            android:textSize="@dimen/text_size_15sp"
            android:id="@+id/validateUrnBT"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="40dp"
            android:background="@drawable/rounded_shape_yello_button"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/text_size_13sp"
            android:text="@string/MobileNumberStatus"
            android:textColor="@color/blue"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/square_shape_textview"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/mobileNoStatSP"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:spinnerMode="dropdown" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="@dimen/text_size_13sp"
        android:text="@string/RSBYurnNo"
        android:textColor="@color/blue"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/rsbyURNNoET"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/edit_text_border"
            android:layout_height="40dp" />
        <Button
            android:text="@string/validateURN"
            android:layout_marginLeft="3dp"
            android:textAllCaps="false"
            android:textColor="@color/white_shine"
            android:textSize="@dimen/text_size_15sp"
            android:id="@+id/updateDetailBT"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="40dp"
            android:background="@drawable/rounded_shape_yello_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="@string/inCaseOfNonADhar"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white_shine"
            android:textSize="@dimen/text_size_15sp"
            android:id="@+id/captureMemberBT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_shape_yello_button"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="@dimen/text_size_13sp"
                android:text="@string/ifsc_code"
                android:textColor="@color/blue"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/ifcCodeET"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/edit_text_border"
                    android:layout_height="40dp" />
                <Button
                    android:text="@string/getBankDetails"
                    android:textAllCaps="false"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white_shine"
                    android:textSize="@dimen/text_size_15sp"
                    android:id="@+id/getBankBT"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_shape_yello_button"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/text_size_13sp"
            android:text=""
            android:textColor="@color/blue"
            />
    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/text_size_13sp"
            android:text="@string/bank_name"
            android:textColor="@color/blue"
            />
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/bankNameET"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_border"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/text_size_13sp"
            android:text="@string/BranchBnk"
            android:textColor="@color/blue"
            />
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/bankBranchET"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_border"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/text_size_13sp"
            android:text="@string/AccNo"
            android:textColor="@color/blue"
            />
        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/accountNumberET"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:background="@drawable/edit_text_border"
                android:layout_height="40dp" />
            <Button
                android:text="@string/validateBankAcc"
                android:textAllCaps="false"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white_shine"
                android:textSize="@dimen/text_size_15sp"
                android:id="@+id/validateBankDetBT"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="40dp"
                android:background="@drawable/rounded_shape_yello_button"/>

        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:id="@+id/stateHealthIdLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<include layout="@layout/state_health_scheme_layout"></include>
    <include layout="@layout/nominee_details_layout" />


</LinearLayout>

</LinearLayout>

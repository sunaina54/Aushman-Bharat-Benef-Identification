                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:id="@+id/rsbyPendingIV"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/exclamation"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/additionalSchemeLayout"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="@dimen/nhps_member_menu_height">
                    <RelativeLayout
                        android:id="@+id/additionalCaptureStatus"
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/right_tick1"/>

                    </RelativeLayout>
                    <TextView
                        android:textSize="@dimen/text_size_20sp"
                        android:visibility="invisible"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"/>
                    <RelativeLayout
                        android:id="@+id/healthSchemeRelLayout"
                        android:padding="2dp"
                        android:background="@drawable/rounded_shape_yello_button"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/text_size_15sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:enabled="true"

                            android:id="@+id/healthSchemeNoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/addSchemeDetails"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow_righttt"
                            android:layout_width="20dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:id="@+id/heathSchemeVerifiedIV"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/right_tick"
                            />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:id="@+id/healthSchemeRejectedIV"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/cancel"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:id="@+id/healthSchemPendingIV"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/exclamation"
                            />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="@dimen/nhps_member_menu_height">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/memberDetRelLayout"
                        android:padding="2dp"
                        android:background="@drawable/rounded_shape_yello_button"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/text_size_15sp"
                            android:textColor="@color/black_shine"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:enabled="true"
                            android:id="@+id/editMemberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reqForConn"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/pointing_right"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">
                        <ImageView

                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:id="@+id/memberVerifiedIV"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/right_tick"
                            />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:id="@+id/memberRejectedIV"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/cancel"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:id="@+id/memberPendingIV"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/exclamation"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

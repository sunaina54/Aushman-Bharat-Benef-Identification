<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.psqit.sampleapp.MemberDetailActivity">
    <include layout="@layout/header_layout" />
    <ScrollView android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_below="@+id/head"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">
        <LinearLayout android:id="@+id/toplay"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="match_parent">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/hhdno"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/hhdNoTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text=""
                        android:paddingLeft="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
        android:id="@+id/namecard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/nametext"
                android:text="@string/nameMmbrId"
                android:textColor="@color/blue"
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_shape_textview"
                android:layout_below="@+id/nametext"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/reltext"
                android:text="@string/relation"
                android:textColor="@color/blue"
                />
            <TextView
                android:id="@+id/relation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:text=""
                android:gravity="center_vertical"
                android:background="@drawable/square_shape_textview"
                android:layout_below="@+id/reltext"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
        android:id="@+id/fathercard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/relationcard"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/fathertext"
                android:text="@string/fatherName"
                android:textColor="@color/blue"
                />
            <TextView
                android:id="@+id/father"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:text=""
                android:gravity="center_vertical"
                android:background="@drawable/square_shape_textview"
                android:layout_below="@+id/fathertext"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout android:id="@+id/motherlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/mothertext"
                android:text="@string/mother"
                android:textColor="@color/blue"
                />
            <TextView
                android:id="@+id/mother"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:text=""
                android:gravity="center_vertical"
                android:background="@drawable/square_shape_textview"
                android:layout_below="@+id/mothertext"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
        android:id="@+id/dobgendercard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/mothercard"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout android:id="@+id/doblay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="5dp">
            <LinearLayout android:id="@+id/lay1"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                >
                <RelativeLayout android:id="@+id/one"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:id="@+id/dobtext"
                android:text="@string/dobCaps"
                android:textColor="@color/blue"
                />
            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:text=""
                android:gravity="center_vertical"
                android:background="@drawable/square_shape_textview"
                android:layout_below="@+id/dobtext"
                />
                </RelativeLayout>
                <RelativeLayout android:id="@+id/two"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"

                        android:id="@+id/gendertext"
                        android:text="@string/genderCaps"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        android:layout_below="@+id/gendertext"
                        />
                </RelativeLayout>
                <RelativeLayout android:id="@+id/three"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"

                        android:id="@+id/maritaltext"
                        android:text="@string/MarritalStatus"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/marital"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        android:layout_below="@+id/maritaltext"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/adharcard"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/dobgendercard"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout android:id="@+id/adharlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"

                        android:id="@+id/adhartext"
                        android:text="@string/Adharcardno"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/adhaar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        android:layout_below="@+id/adhartext"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/mobilecard"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/adharcard"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout android:id="@+id/mobilelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"

                        android:id="@+id/mobiletext"
                        android:text="@string/mobile_number"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        android:layout_below="@+id/mobiletext"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/occupcard"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/mobilecard"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout android:id="@+id/occuplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"

                        android:id="@+id/occuptext"
                        android:text="@string/occupation"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/occup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        android:layout_below="@+id/occuptext"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:id="@+id/inscard"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/occupcard"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout android:id="@+id/inslay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"

                        android:id="@+id/instext"
                        android:text="@string/RSBYStateInsurance"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/inss"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        android:layout_below="@+id/instext"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:id="@+id/rationcard"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"

                android:layout_below="@+id/inscard"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout android:id="@+id/rationlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"

                        android:id="@+id/rationtext"
                        android:text="@string/RationNo"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/ration"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:background="@drawable/square_shape_textview"
                        android:layout_below="@+id/rationtext"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="visible"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/memberStatus"
                        android:textColor="@color/blue"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/square_shape_textview"
                        android:layout_height="wrap_content">
                        <Spinner

                            android:id="@+id/memberStatusSP"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <include  layout="@layout/aadhaar_details"/>
            <include layout="@layout/bank_n_other_details_layout" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:background="#1BB7BF"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/edit"
            android:textAllCaps="false"
        android:layout_height="40dp"
            android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_shape_yello_button"
        android:text="@string/edit_member_detail"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/text_size_15sp"
        android:layout_margin="5dp"
        />
        <Button
            android:text="@string/update"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textColor="@color/white_shine"
            android:textSize="@dimen/text_size_15sp"
            android:id="@+id/updateDetailBT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_shape_yello_button"/>
    </LinearLayout>

</RelativeLayout>

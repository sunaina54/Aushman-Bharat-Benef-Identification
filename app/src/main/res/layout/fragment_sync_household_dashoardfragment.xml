<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhpm.rsbyFieldValidation.fragment.SyncRsbyHouseholdDashoardfragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                style="@style/statusBack"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:id="@+id/syncErrorLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="10sp"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/syncError" />

                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"
                    android:id="@+id/syncErrorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                style="@style/statusBack"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:id="@+id/pendingHouseholdLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textView"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/readyToSync"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"
                    android:id="@+id/readyToSyncedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/readyToSynLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                style="@style/statusBack"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:id="@+id/syncedHouseLayout"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:id="@+id/partialFamilyLable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textView"
                    android:text="@string/syncedHousehold"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"
                    android:id="@+id/syncedHouseholdTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalHouseholdLayout"
                style="@style/statusBack"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textView"
                    android:text="@string/totalHousehold"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"
                    android:id="@+id/totalHouseholdTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </LinearLayout>


        </LinearLayout>


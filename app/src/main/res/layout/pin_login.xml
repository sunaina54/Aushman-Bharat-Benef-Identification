<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/otpAuthMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:textColor="@color/black_shine" />

        <TextView
            android:id="@+id/invalidOtpTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="@string/invalid_otp"
            android:textColor="@color/red"
            android:visibility="gone" />

        <EditText
            android:id="@+id/otpET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background_gray_corner"
            android:hint="@string/enteRPin"
            android:inputType="number"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="@dimen/text_size_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="2">

            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_orange_ehit"
                android:text="@string/ok"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/cancelBT"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_orange"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/yellow_dark" />


        </LinearLayout>

    </LinearLayout>
    <!--  </android.support.v7.widget.CardView>-->

</LinearLayout>

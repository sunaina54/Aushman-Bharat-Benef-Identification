<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loctext"
        card_view:cardBackgroundColor="@color/white"

        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textView"
                    android:text="@string/state_name"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@id/stateNameTV"
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textViewYellow"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textView"
                    android:text="@string/district_name"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@id/distNameTV"
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textViewYellow"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textView"
                    android:text="@string/tehsil"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@id/tehsilNameTV"
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textViewYellow"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textView"
                    android:text="@string/village"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/vtNameTV"
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textViewYellow"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wardLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textView"
                    android:text="@string/ward"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wardCodeTV"
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textViewYellow"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
                android:id="@+id/ebLinearLayout">
            <TextView
                android:textSize="@dimen/text_size_12sp"
                style="@style/textView"
                android:text="@string/EnumBlock"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ebTV"
                android:textSize="@dimen/text_size_12sp"
                style="@style/textViewYellow"
                android:text="-"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/subEbLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textView"
                    android:text="@string/subEnumBlock"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/subEbTV"
                    android:textSize="@dimen/text_size_12sp"
                    style="@style/textViewYellow"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_15sp"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:text="@string/subEnumBlock"
                    android:textColor="@color/black_shine"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_15sp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/blockCodeTV"
                    android:padding="2dp"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:text="0001"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                style="@style/textViewYellow"
                android:textSize="@dimen/text_size_12sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:text="@string/noHousehold"
                android:textColor="@color/black_shine"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginLeft="2dp"
                android:id="@+id/totalHouseholdTV"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textViewYellow"
                    android:textSize="@dimen/text_size_12sp"
                    android:textStyle="bold"
                    android:padding="2dp"

                    android:layout_width="wrap_content"
                    android:text="@string/noSyncHousehold"
                    android:textColor="@color/black_shine"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/syncedMemberTV"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textViewYellow"
                    android:textSize="@dimen/text_size_12sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:text="@string/total_no_of_members"
                    android:textColor="@color/black_shine"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/textViewBlue"
                    android:textSize="12sp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/totalMemberTV"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textViewYellow"
                    android:textSize="@dimen/text_size_12sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:text="@string/noofSyncMmbr"
                    android:textColor="@color/black_shine"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/textViewBlue"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/totalSyncMemberTV"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_12sp"
            android:layout_alignParentRight="true"
            android:id="@+id/proceedBT"
            style="@style/buttonGrey"
            android:text="@string/proceed"
            android:layout_width="100dp"
            android:layout_height="30dp" />

    <ImageView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/pointing_right"
        android:layout_marginRight="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


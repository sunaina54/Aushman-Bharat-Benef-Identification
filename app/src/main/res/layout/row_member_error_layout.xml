<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="2dp"
    android:id="@+id/itemlay"
    android:paddingRight="2dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/memberRowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <Button
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/memberStatusBT"
                style="@style/button"
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="90dp"
                android:layout_height="30dp" />
            <TextView
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:id="@+id/verifiedStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verified"/>
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/pointing_right"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:weightSum=".2"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/name"
                       style="@style/textViewBlue"
                        />

                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/memberNametTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        style="@style/textView"
                        />
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text=""
                        style="@style/textViewBlue"
                        />

                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/localNameTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        style="@style/textView"
                        />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                      android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/fatherName"
                        style="@style/textViewBlue"
                        />
                    <TextView
                        android:id="@+id/fatherNameTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:textSize="12sp"
                        android:text="-"
                        style="@style/textView"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/householdhash"
                        style="@style/textViewBlue"
                        />

                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/householdIdTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        style="@style/textView"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/adhar"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/aadhaarNoTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="92624357257"
                        style="@style/textView"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/govId"
                       style="@style/textViewBlue"
                        />
                    <TextView
                        android:id="@+id/govtIdTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                       style="@style/textView"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:textSize="12sp"
                        android:text="@string/houseHoldStatus"
                        style="@style/textViewBlue"
                        />
                    <TextView
                        android:textColor="@color/head_status_color"
                        android:id="@+id/householdStatusTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        android:textSize="12sp"
                        style="@style/textView"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/memberStatusLayout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:textSize="12sp"
                        android:text="@string/member_status_msg"
                        style="@style/textViewBlue"
                        />
                    <TextView
                        android:id="@+id/memberStatusTV"
                        android:textColor="@color/head_status_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        android:textSize="12sp"
                        style="@style/textView"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:textSize="12sp"
                        android:text="@string/address"
                        style="@style/textViewBlue"
                        />
                    <TextView
                        android:id="@+id/addressTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        android:textSize="12sp"
                        style="@style/textView"
                        />
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/errorMsgLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:textSize="@dimen/text_size_12sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/error"
                        style="@style/textViewBlue"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".7"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/errorTV"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_12sp"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/syncTimeLayout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        style="@style/textViewBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/syncDateTime"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/syncDateTV"
                        android:layout_width="0dp"
                        android:textSize="@dimen/text_size_13sp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        android:textColor="@color/black_shine"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nhpsMemIdLayout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        style="@style/textViewBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/memberid"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/nhpsMemId"
                        android:layout_width="0dp"
                        android:textSize="@dimen/text_size_13sp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="-"
                        android:textColor="@color/black_shine"
                        />
                </LinearLayout>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".3"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/eSignBT"
                            android:textSize="@dimen/text_size_15sp"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            android:background="@drawable/rounded_shape_yello_button"
                            android:layout_width="85dp"
                            android:layout_height="30dp"
                            android:text="@string/eSign"/>
                        <TextView
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:id="@+id/verified"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/verified"
                            android:textColor="@android:color/holo_green_dark"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/next"
                        android:visibility="gone"
                        android:src="@drawable/arrow_right"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        />

                </LinearLayout>
            <TextView android:id="@+id/idd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/augDate"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

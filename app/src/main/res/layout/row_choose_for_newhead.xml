<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="2dp"
    android:id="@+id/itemlay"
    android:paddingRight="2dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="15dp">
          <RelativeLayout
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_width="200dp"
              android:layout_height="40dp">
              <Button
                  android:visibility="visible"
                  android:layout_alignParentRight="true"
                  android:id="@+id/chooseRelationBT"
                  style="@style/button"
                  android:textSize="12sp"
                  android:layout_width="115dp"
                  android:text="@string/selctNewHead"
                  android:layout_height="35dp" />
              <TextView
                  android:gravity="center_horizontal|center_vertical"
                    android:background="@color/blue"
                  android:layout_alignParentRight="true"
                  android:id="@+id/newHeadStatusTV"
                  style="@style/button"
                  android:textSize="12sp"
                  android:layout_width="115dp"
                  android:text="@string/newHead"
                  android:layout_height="35dp" />
          </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:weightSum=".2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/familyHeadLayout"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/membrType"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView

                            android:textSize="@dimen/text_size_15sp"
                            android:id="@+id/familyType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="@string/head"
                            android:textColor="@color/green"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/householdno"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:textSize="@dimen/text_size_15sp"
                            android:id="@+id/houseNoTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"
                            android:textColor="@color/black_shine"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/name"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_12sp"
                            android:id="@+id/nameTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"
                            android:textColor="@color/black_shine"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text=""
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_12sp"
                            android:id="@+id/localNameTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"
                            android:textColor="@color/black_shine"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/fatherName"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:id="@+id/fatherNameTV"
                            android:layout_width="0dp"
                            android:textSize="@dimen/text_size_12sp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"
                            android:textColor="@color/black_shine"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text=""
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/localfatherNameTV"
                            android:layout_width="0dp"
                            android:textSize="@dimen/text_size_13sp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"
                            android:textColor="@color/black_shine"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/relation"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView

                            android:textSize="@dimen/text_size_12sp"
                            android:id="@+id/relationTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"
                            android:textColor="@color/green"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/gender"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:textSize="@dimen/text_size_12sp"
                            android:id="@+id/genderTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"

                            android:textColor="@color/black_shine"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/address"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:textSize="@dimen/text_size_13sp"
                            android:id="@+id/addressTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="-"
                            android:textColor="@color/black_shine"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".3"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/eSignBT"
                            android:textSize="@dimen/text_size_15sp"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            android:background="@drawable/rounded_shape_yello_button"
                            android:layout_width="85dp"
                            android:layout_height="30dp"
                            android:text="@string/eSign"/>
                        <TextView
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:id="@+id/verified"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/verified"
                            android:textColor="@android:color/holo_green_dark"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/next"
                        android:visibility="gone"
                        android:src="@drawable/arrow_right"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

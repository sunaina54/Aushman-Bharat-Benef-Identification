<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhpm.activity.RSBYMemberActivity">
  <include layout="@layout/header_layout" android:id="@+id/header" />

    <LinearLayout
        android:layout_below="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/totalRsbyHouseholdBT"
            android:layout_marginLeft="1dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:text="@string/RSBYhousehold"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/white_shine"
            android:background="@drawable/tab_button_shape"
            />
        <Button
            android:id="@+id/validatedRSBYMemberBT"
            android:layout_marginLeft="1dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:text="@string/validateMmbr"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/white_shine"
            android:background="@drawable/tab_button_shape"

            />
        <Button
            android:id="@+id/nonValidatedRsbyMemberBT"
            android:padding="3dp"
            android:layout_marginLeft="1dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:text="@string/nonvalidateMembr"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/white_shine"
            android:background="@drawable/tab_button_shape"

            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="match_parent"
        android:background="@color/white_shine">

    </FrameLayout>
  </LinearLayout>
</RelativeLayout>

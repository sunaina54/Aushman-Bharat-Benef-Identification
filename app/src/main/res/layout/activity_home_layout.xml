<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhpm.Activities.GetDataActivity">
    <include layout="@layout/auth_header_layout" android:id="@+id/head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loctext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/alloted_location"
            android:textColor="@color/black_shine"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loctext"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loctext"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_shape_grey">

                    <RelativeLayout
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/state"
                            android:textSize="@dimen/text_size_18sp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/nameTitme"
                            android:textColor="@color/yellow_dark"
                            android:textSize="@dimen/text_size_18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="10dp"
                            android:text="@string/codeTitle"
                            android:textColor="@color/yellow_dark"
                            android:textSize="@dimen/text_size_18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_margin="2dp"
                        android:background="@color/white_shine"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/statetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/state_name"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/stateNameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/pudduchery"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/stateCodeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="001"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/disttext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/district_name"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/distNameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/puducherysmall"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/distCodeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="003"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/subdisttext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/tehsil"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tehsilNameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/subdisttext"
                                android:layout_centerHorizontal="true"
                                android:text="@string/puducherytaluk"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/tehsilCodeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/subdistvalue"
                                android:layout_alignParentRight="true"
                                android:text="003"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/village"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/villTownNameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="-"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/villTownCodeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="003"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/ward"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/wardNameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="-"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/wardCodeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="003"
                                android:textColor="@color/black_shine"
                                android:textSize="@dimen/text_size_15sp" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loctext"
            android:padding="10dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/dashBoardBT"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:layout_weight=".7"
                    android:background="@drawable/rounded_shape_yello_button"
                    android:text="@string/dashboard"
                    android:textSize="@dimen/text_size_12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white_shine" />

                <Button
                    android:id="@+id/blockDataBT"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/rounded_shape_yello_button"
                    android:text="@string/secc"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/white_shine" />

                <Button
                    android:id="@+id/rsbyDataBT"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_shape_yello_button"
                    android:text="@string/RSBYdata"
                    android:textAllCaps="false"
                    android:textColor="@color/white_shine"
                    android:visibility="gone" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>

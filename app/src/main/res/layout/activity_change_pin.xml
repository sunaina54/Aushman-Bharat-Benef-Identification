<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhpm.activity.ChangePinActivity">
    <include layout="@layout/header_layout" android:id="@+id/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/newPinNumberET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_background_gray_corner"

            android:hint="@string/pinHint"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/confirmNumberET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_background_gray_corner"
            android:hint="@string/confrmPin"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:paddingLeft="15dp" />

        <Button
            android:id="@+id/resetPinBT"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:layout_marginRight="15dp"
            android:text="@string/reset" />
    </LinearLayout>


</RelativeLayout>

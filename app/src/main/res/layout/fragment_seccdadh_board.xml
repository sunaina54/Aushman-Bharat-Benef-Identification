<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhpm.fragments.HouseholdStatusBoardFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:visibility="gone"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="1dp"

                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textColor="@color/blue"
                        android:layout_width="match_parent"
                        android:textSize="12sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="@string/searchFamilyAdharHousehold"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:background="@drawable/edit_text_border"
                        android:layout_height="wrap_content">
                        <EditText android:id="@+id/searchFamilyMemberET"
                            android:visibility="visible"
                            android:layout_margin="5dp"
                            android:layout_below="@+id/card_view"
                            android:layout_width="0dp"
                            android:layout_weight="1.7"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="5dp"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/text_size_15sp"
                            android:imeOptions="actionDone"
                            android:hint="@string/search"/>
                        <RelativeLayout
                            android:id="@+id/searchFamilyMemberLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".32">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/search_black"/>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:id="@+id/totalHouseholdLayout"
                            style="@style/statusBack"
                            android:layout_margin="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:id="@+id/totalMemberLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/textView"
                                android:text="@string/totalHousehold"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:textColor="@color/blue"
                                android:id="@+id/totalHouseholdTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"/>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            style="@style/statusBack"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:id="@+id/visitedHouseholdLayout"
                            android:layout_centerHorizontal="true"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:id="@+id/partialFamilyLable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/textView"
                                android:text="@string/visitedHousehold"/>
                            <TextView
                                android:layout_centerVertical="true"
                                android:textColor="@color/blue"
                                android:id="@+id/visitedHouseholdTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/statusBack"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:id="@+id/pendingHouseholdLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="10sp"
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pendingHousehold"
                                android:id="@+id/textView6" />

                            <TextView
                                android:layout_centerVertical="true"
                                android:textColor="@color/blue"
                                android:id="@+id/pendingHouseholdTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            style="@style/statusBack"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:id="@+id/underSurveyHouseholdLayout"
                            android:layout_centerHorizontal="true"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/textView"
                                android:text="@string/underSurvey"/>
                            <TextView
                                android:layout_centerVertical="true"
                                android:textColor="@color/blue"
                                android:id="@+id/underSurveyHouseholdTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/statusBack"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:id="@+id/surveyedLayout"
                            android:layout_centerHorizontal="true"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/textView"
                                android:text="@string/surveyAndLocked"/>
                            <TextView
                                android:layout_centerVertical="true"
                                android:textColor="@color/blue"
                                android:id="@+id/surveyedHouseholdTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/syncHouseholdLayout"
                            style="@style/statusBack"
                            android:layout_margin="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/textView"
                                android:text="@string/Synced"/>
                            <TextView
                                android:layout_centerVertical="true"
                                android:textColor="@color/blue"
                                android:id="@+id/syncedHouseholdTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:weightSum="2"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/notVerifiedFamilyBT"
                android:layout_marginLeft="1dp"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/pendingHousehold"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/white_shine"
                android:background="@drawable/tab_button_shape"
                />
            <Button
                android:id="@+id/partialVerifiedBT"
                android:layout_marginLeft="1dp"
                android:padding="3dp"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/partialValidateHoshold"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/white_shine"
                android:background="@drawable/tab_button_shape"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/verifedBT"
                android:padding="3dp"
                android:layout_marginLeft="1dp"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:text="@string/validatedHoshold"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/white_shine"
                android:background="@drawable/tab_button_shape"

                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/seccDashboardContainer"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent"
            android:background="@color/white_shine">
        </FrameLayout>
    </LinearLayout>

</FrameLayout>

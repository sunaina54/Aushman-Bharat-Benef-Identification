<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhpm.activity.SearchActivityWithHouseHold">

    <include
        android:id="@+id/header"
        layout="@layout/search_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/notVerifiedFamilyBT"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="#2f4f4f"
                android:text="@string/seccDashboard"
                android:textAllCaps="false"
                android:textColor="@color/white_shine"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/partialVerifiedBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/tab_button_shape"
                android:padding="3dp"
                android:text="@string/rsbyDashboard"
                android:textAllCaps="false"
                android:textColor="@color/white_shine"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/memberStatusBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/tab_button_shape"
                android:padding="3dp"
                android:text="@string/membrDashboard"
                android:textAllCaps="false"
                android:textColor="@color/white_shine"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/seccDashboardAppConfigBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:background="@color/yellow"
                android:padding="3dp"
                android:text="@string/seccDashboard"
                android:textAllCaps="false"
                android:textColor="@color/black_shine"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="gone"

                />

            <Button
                android:id="@+id/partialVerifiedAppConfigBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:background="@color/yellow"
                android:padding="3dp"
                android:text="@string/rsbyDashboard"
                android:textAllCaps="false"
                android:textColor="@color/black_shine"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_shine"
            android:clickable="true"></FrameLayout>

    </LinearLayout>
</RelativeLayout>
